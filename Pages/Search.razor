@page "/Search/{searchterm}"
@inject NavigationManager nav
@inject Data Datas

<PageTitle>Search Results - Tom & Jerry</PageTitle>

<div class="min-h-screen bg-gray-50">
    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-4 py-8">
        <!-- Search Header -->
        <div class="mb-8">
            <div class="flex items-center space-x-4 mb-6">
                <button @onclick="@(() => nav.NavigateTo("/"))" 
                        class="p-2 text-gray-600 hover:text-red-600 hover:bg-red-50 rounded-full transition-all duration-200">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                    </svg>
                </button>
                <div class="flex-1">
                    <h1 class="text-3xl font-bold text-gray-900 mb-2">Search Results</h1>
                    <div class="flex items-center space-x-4">
                        <p class="text-gray-600">Results for: <span class="font-semibold text-red-600">@searchterm</span></p>
                        <div class="flex items-center space-x-2 text-sm text-gray-500">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                            </svg>
                            <span>@Datas.FilteredData.Count videos found</span>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Search Suggestions -->
            <div class="bg-white rounded-xl p-4 shadow-sm border border-gray-200 mb-6">
                <h3 class="text-sm font-medium text-gray-900 mb-3">Related Searches</h3>
                <div class="flex flex-wrap gap-2">
                    <button class="px-3 py-1 text-xs bg-gray-100 text-gray-700 rounded-full hover:bg-red-100 hover:text-red-600 transition-colors">
                        Classic Episodes
                    </button>
                    <button class="px-3 py-1 text-xs bg-gray-100 text-gray-700 rounded-full hover:bg-red-100 hover:text-red-600 transition-colors">
                        Funny Moments
                    </button>
                    <button class="px-3 py-1 text-xs bg-gray-100 text-gray-700 rounded-full hover:bg-red-100 hover:text-red-600 transition-colors">
                        Best Chases
                    </button>
                    <button class="px-3 py-1 text-xs bg-gray-100 text-gray-700 rounded-full hover:bg-red-100 hover:text-red-600 transition-colors">
                        Music Episodes
                    </button>
                </div>
            </div>
        </div>
        
        <!-- Filter Tabs -->
        <div class="mb-8">
            <div class="bg-white rounded-xl p-1 shadow-sm border border-gray-200 inline-flex">
                <nav class="flex space-x-1">
                    <button class="py-2 px-4 rounded-lg bg-red-600 text-white font-medium text-sm transition-all duration-200">
                        All (@Datas.FilteredData.Count)
                    </button>
                    <button class="py-2 px-4 rounded-lg text-gray-600 hover:text-gray-900 hover:bg-gray-100 font-medium text-sm transition-all duration-200">
                        Videos
                    </button>
                    <button class="py-2 px-4 rounded-lg text-gray-600 hover:text-gray-900 hover:bg-gray-100 font-medium text-sm transition-all duration-200">
                        Channels
                    </button>
                    <button class="py-2 px-4 rounded-lg text-gray-600 hover:text-gray-900 hover:bg-gray-100 font-medium text-sm transition-all duration-200">
                        Playlists
                    </button>
                </nav>
            </div>
        </div>
        
        @if (Datas.FilteredData.Count > 0)
        {
            <!-- Video Grid -->
            <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-6">
                @foreach (var item in Datas.FilteredData)
                {
                    <Thumbnail VideoModel="@item"/>
                }
            </div>
            
            <!-- Load More -->
            <div class="text-center mt-8">
                <button class="px-8 py-4 bg-gradient-to-r from-red-600 to-red-700 text-white rounded-xl hover:from-red-700 hover:to-red-800 transition-all duration-200 font-medium shadow-lg hover:shadow-xl transform hover:-translate-y-1">
                    <span class="flex items-center space-x-2">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12"></path>
                        </svg>
                        <span>Load More Results</span>
                    </span>
                </button>
            </div>
        }
        else
        {
            <!-- No Results State -->
            <div class="text-center py-16">
                <div class="bg-white rounded-2xl p-12 shadow-lg border border-gray-200 max-w-md mx-auto">
                    <div class="w-20 h-20 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-6">
                        <svg class="w-10 h-10 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                        </svg>
                    </div>
                    <h3 class="text-xl font-semibold text-gray-900 mb-3">No videos found</h3>
                    <p class="text-gray-600 mb-6">We couldn't find any episodes matching "@searchterm"</p>
                    <div class="space-y-3">
                        <p class="text-sm text-gray-500">Try searching for:</p>
                        <div class="flex flex-wrap justify-center gap-2">
                            <button class="px-3 py-1 text-sm bg-red-100 text-red-600 rounded-full hover:bg-red-200 transition-colors">
                                Classic Episodes
                            </button>
                            <button class="px-3 py-1 text-sm bg-red-100 text-red-600 rounded-full hover:bg-red-200 transition-colors">
                                Funny Moments
                            </button>
                            <button class="px-3 py-1 text-sm bg-red-100 text-red-600 rounded-full hover:bg-red-200 transition-colors">
                                Best Chases
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


@code
{
    [Parameter] public string searchterm { get; set; } = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        Datas.OnChange += StateHasChanged;
        await Datas.InitializeAsync();
    }

    public void Dispose()
    {
        Datas.OnChange -= StateHasChanged;
    }

    public void GoTOPage(Video video)
    {
        nav.NavigateTo($"playmedia/{video.Id}");
    }
}
