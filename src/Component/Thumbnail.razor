@using TomAndJerry.Services
@using TomAndJerry.Model
@inject NavigationManager Nav

<div id="video-thumbnail-@VideoModel.Id" class="tom-jerry-card cursor-pointer group p-2 sm:p-4" @onclick="GoToPage">
    <!-- Thumbnail Container -->
    <div id="thumbnail-container-@VideoModel.Id" class="relative aspect-video bg-soft-yellow rounded-xl sm:rounded-2xl overflow-hidden mb-3 sm:mb-4 border-2 border-jerry-brown shadow-lg">
        <img src="@VideoModel.Thumbnail" 
             alt="@GetCleanTitle()" 
             class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"/>
        
        <!-- Play Button Overlay -->
        <div id="play-button-overlay-@VideoModel.Id" class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
            <div class="w-16 h-16 sm:w-20 sm:h-20 bg-gradient-to-r from-tom-blue to-cartoon-red rounded-full flex items-center justify-center shadow-2xl cartoon-rounded animate-bounce-slow">
                <svg class="w-6 h-6 sm:w-8 sm:h-8 text-white ml-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd"/>
                </svg>
            </div>
        </div>
        
        <!-- Duration Badge -->
        <div id="duration-badge-@VideoModel.Id" class="absolute bottom-2 sm:bottom-3 right-2 sm:right-3 bg-jerry-brown text-white text-xs px-2 sm:px-3 py-1 rounded-full font-bold font-comic shadow-lg">
            7:30
        </div>
    </div>
    
    <!-- Video Info -->
    <div id="video-info-@VideoModel.Id" class="space-y-2 sm:space-y-3">
        <!-- Title -->
        <h3 id="video-title-@VideoModel.Id" class="font-bold text-amber-800 text-sm sm:text-base line-clamp-2 group-hover:text-blue-600 transition-colors font-cartoon">
            @GetCleanTitle()
        </h3>
        
        <!-- Channel Info -->
        <div id="channel-info-@VideoModel.Id" class="flex items-center space-x-2 sm:space-x-3">
            <div class="jerry-character">
                <div class="w-6 h-6 sm:w-8 sm:h-8 rounded-full overflow-hidden ring-2 ring-cartoon-yellow shadow-lg">
                    <RandomSticker CssClass="w-full h-full" ImageCssClass="w-full h-full object-cover" AutoRefresh="true" RefreshIntervalSeconds="15" />
                </div>
            </div>
            <span class="text-xs sm:text-sm text-amber-900 font-comic font-bold">Tom & Jerry</span>
        </div>
        
        <!-- Stats -->
        <div id="video-stats-@VideoModel.Id" class="text-xs sm:text-sm text-amber-800 font-comic font-semibold">
            <span class="bg-soft-yellow px-1.5 sm:px-2 py-0.5 sm:py-1 rounded-full">@GetRandomViews() views</span>
            <span class="mx-1 sm:mx-2">•</span>
            <span class="bg-soft-blue px-1.5 sm:px-2 py-0.5 sm:py-1 rounded-full">@GetRandomTimeAgo()</span>
        </div>
    </div>
</div>

@code
{
    [Parameter] public Video VideoModel { get; set; } = new();

    public void GoToPage()
    {
        Nav.NavigateTo($"playmedia/{VideoModel.Id}");
    }
    
    private string GetCleanTitle()
    {
        return string.Join(" ", VideoModel.Description.Split(".").Where(x => x != "mkv").Select(x => x));
    }
    
    private string GetRandomViews()
    {
        var random = new Random();
        var views = random.Next(100, 10000);
        if (views >= 1000)
        {
            return $"{views / 1000:F1}K";
        }
        return views.ToString();
    }
    
    private string GetRandomTimeAgo()
    {
        var random = new Random();
        var days = random.Next(1, 365);
        if (days < 7)
            return $"{days} days ago";
        else if (days < 30)
            return $"{days / 7} weeks ago";
        else if (days < 365)
            return $"{days / 30} months ago";
        else
            return $"{days / 365} years ago";
    }
}

<style>
    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    
    .video-card {
        transition: all 0.2s ease-in-out;
    }
    
    .video-card:hover {
        transform: translateY(-2px);
    }
</style>