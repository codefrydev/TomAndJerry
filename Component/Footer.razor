@using TomAndJerry.Services
@inject IStateService StateService

<footer class="tom-jerry-footer mt-auto">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12">
        <!-- Main Footer Content -->
        <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-6 sm:gap-8 mb-8 sm:mb-12">
            <!-- Brand Section -->
            <div class="md:col-span-2 xl:col-span-2">
                <div class="flex flex-col sm:flex-row items-start sm:items-center space-y-4 sm:space-y-0 sm:space-x-6 mb-6">
                    <div class="tom-character">
                        <div class="w-20 h-20 sm:w-24 sm:h-24 rounded-3xl overflow-hidden ring-4 ring-white/20 shadow-2xl bg-gradient-to-br from-orange-400 to-orange-600 p-1">
                            <RandomSticker Category="classic" CssClass="w-full h-full" ImageCssClass="w-full h-full object-cover rounded-2xl" AutoRefresh="true" RefreshIntervalSeconds="15" />
                        </div>
                    </div>
                    <div class="text-center sm:text-left">
                        <h3 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white font-comic cartoon-text mb-2">
                            Tom & Jerry
                        </h3>
                        <p class="text-white/90 text-base sm:text-lg font-medium">
                            Classic Cartoon Collection
                        </p>
                    </div>
                </div>
                <p class="text-white/80 text-lg sm:text-xl leading-relaxed font-comic max-w-lg">
                    The timeless cat and mouse chase that has entertained generations. 
                    Watch your favorite episodes and collect adorable stickers in this interactive experience!
                </p>
            </div>

            <!-- Navigation Links -->
            <div class="order-3 xl:order-2">
                <h4 class="text-2xl sm:text-3xl font-bold text-white font-comic cartoon-text mb-4 sm:mb-6 flex items-center justify-center md:justify-start">
                    <span class="w-2 h-2 bg-orange-500 rounded-full mr-3"></span>
                    Explore
                </h4>
                <nav class="space-y-2 sm:space-y-3" role="navigation" aria-label="Footer navigation">
                    <button @onclick="GoToHomePage" 
                            class="group flex items-center w-full text-slate-800 hover:text-slate-900 transition-all duration-300 font-comic text-lg sm:text-xl hover:translate-x-2 p-2 sm:p-3 rounded-xl hover:bg-white/10">
                        <span class="w-8 h-8 sm:w-10 sm:h-10 bg-gradient-to-br from-blue-400 to-blue-600 rounded-xl flex items-center justify-center mr-3 group-hover:scale-110 transition-transform duration-300">
                            üé¨
                        </span>
                        <span class="group-hover:font-semibold transition-all duration-300">All Episodes</span>
                    </button>
                    <button @onclick="GoToStickers" 
                            class="group flex items-center w-full text-slate-800 hover:text-slate-900 transition-all duration-300 font-comic text-lg sm:text-xl hover:translate-x-2 p-2 sm:p-3 rounded-xl hover:bg-white/10">
                        <span class="w-8 h-8 sm:w-10 sm:h-10 bg-gradient-to-br from-red-400 to-red-600 rounded-xl flex items-center justify-center mr-3 group-hover:scale-110 transition-transform duration-300">
                            üé≠
                        </span>
                        <span class="group-hover:font-semibold transition-all duration-300">Sticker Gallery</span>
                    </button>
                    <button @onclick="GoToSearch" 
                            class="group flex items-center w-full text-slate-800 hover:text-slate-900 transition-all duration-300 font-comic text-lg sm:text-xl hover:translate-x-2 p-2 sm:p-3 rounded-xl hover:bg-white/10">
                        <span class="w-8 h-8 sm:w-10 sm:h-10 bg-gradient-to-br from-yellow-400 to-yellow-600 rounded-xl flex items-center justify-center mr-3 group-hover:scale-110 transition-transform duration-300">
                            üîç
                        </span>
                        <span class="group-hover:font-semibold transition-all duration-300">Search Episodes</span>
                    </button>
                </nav>
            </div>

            <!-- Stats Section -->
            <div class="order-4 xl:order-3">
                <h4 class="text-2xl sm:text-3xl font-bold text-white font-comic cartoon-text mb-4 sm:mb-6 flex items-center justify-center md:justify-start">
                    <span class="w-2 h-2 bg-orange-500 rounded-full mr-3"></span>
                    Statistics
                </h4>
                <div class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-1 gap-3 sm:gap-4">
                    @if (StateService.IsLoading || !StateService.CurrentVideos.Any())
                    {
                        <div class="modern-stat-card">
                            <div class="h-6 sm:h-8 bg-white/20 rounded-lg w-16 sm:w-20 mb-2 skeleton animate-pulse"></div>
                            <div class="text-sm sm:text-base text-white/70 font-comic">Episodes Available</div>
                        </div>
                    }
                    else
                    {
                        <div class="modern-stat-card">
                            <div class="text-2xl sm:text-3xl lg:text-4xl font-bold text-white font-cartoon mb-1">@StateService.CurrentVideos.Count()</div>
                            <div class="text-sm sm:text-base text-white/70 font-comic">Episodes Available</div>
                        </div>
                    }
                    <div class="modern-stat-card">
                        <div class="text-2xl sm:text-3xl lg:text-4xl font-bold text-white font-cartoon mb-1">24</div>
                        <div class="text-sm sm:text-base text-white/70 font-comic">Stickers to Collect</div>
                    </div>
                    <div class="modern-stat-card sm:col-span-2 xl:col-span-1">
                        <div class="text-2xl sm:text-3xl lg:text-4xl font-bold text-white font-cartoon mb-1">‚àû</div>
                        <div class="text-sm sm:text-base text-white/70 font-comic">Hours of Fun</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bottom Section - Modern Design -->
        <div class="border-t border-gradient-to-r from-transparent via-white/30 to-transparent mt-8 sm:mt-12 pt-6 sm:pt-8">
            <!-- Disclaimer Cards -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 sm:gap-6 mb-6 sm:mb-8">
                <div class="disclaimer-card">
                    <div class="flex items-center mb-3">
                        <div class="w-8 h-8 sm:w-10 sm:h-10 bg-gradient-to-br from-orange-400 to-orange-600 rounded-xl flex items-center justify-center mr-3">
                            ‚ö†Ô∏è
                        </div>
                        <h5 class="text-lg sm:text-xl font-bold text-white font-comic">Educational Purpose</h5>
                    </div>
                    <p class="text-white/80 text-sm sm:text-base font-comic leading-relaxed">
                        This application is created solely for learning and educational purposes. 
                        <span class="text-orange-200 font-semibold">No content is monetized or used for commercial purposes.</span>
                    </p>
                </div>
                
                <div class="disclaimer-card">
                    <div class="flex items-center mb-3">
                        <div class="w-8 h-8 sm:w-10 sm:h-10 bg-gradient-to-br from-blue-400 to-blue-600 rounded-xl flex items-center justify-center mr-3">
                            ‚ÑπÔ∏è
                        </div>
                        <h5 class="text-lg sm:text-xl font-bold text-white font-comic">Content Disclaimer</h5>
                    </div>
                    <p class="text-white/80 text-sm sm:text-base font-comic leading-relaxed">
                        All Tom & Jerry characters and content belong to Warner Bros. Discovery. 
                        This is a fan-made educational project with no commercial intent.
                    </p>
                </div>
            </div>
            
            <!-- Footer Bottom -->
            <div class="flex flex-col space-y-4 sm:space-y-6">
                <div class="flex flex-col sm:flex-row items-center justify-between space-y-4 sm:space-y-0">
                    <div class="flex items-center space-x-3 sm:space-x-4">
                        <div class="jerry-character">
                            <div class="w-12 h-12 sm:w-14 sm:h-14 rounded-2xl overflow-hidden ring-2 ring-white/20 shadow-lg bg-gradient-to-br from-blue-400 to-blue-600 p-0.5">
                                <RandomSticker Category="classic" CssClass="w-full h-full" ImageCssClass="w-full h-full object-cover rounded-xl" AutoRefresh="true" RefreshIntervalSeconds="18" />
                            </div>
                        </div>
                        <div class="text-center sm:text-left">
                            <p class="text-white/70 text-base sm:text-lg font-comic font-medium">
                                ¬© 2024 Educational Project
                            </p>
                            <p class="text-white/60 text-sm sm:text-base font-comic">
                                Made with ‚ù§Ô∏è for learning purposes
                            </p>
                        </div>
                    </div>
                    
                    <div class="flex flex-wrap items-center justify-center gap-4 sm:gap-6">
                        <div class="flex items-center space-x-2 text-slate-600">
                            <div class="w-2 h-2 bg-gradient-to-r from-orange-400 to-orange-600 rounded-full"></div>
                            <span class="text-sm font-comic">Tom & Jerry ¬© Warner Bros.</span>
                        </div>
                        <div class="flex items-center space-x-2 text-slate-600">
                            <div class="w-2 h-2 bg-gradient-to-r from-blue-400 to-blue-600 rounded-full"></div>
                            <span class="text-sm font-comic">Blazor WebAssembly</span>
                        </div>
                        <div class="flex items-center space-x-2 text-slate-600">
                            <div class="w-2 h-2 bg-gradient-to-r from-yellow-400 to-yellow-600 rounded-full"></div>
                            <span class="text-sm font-comic">.NET 9.0</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>

@code {
    [Inject] private NavigationManager nav { get; set; } = default!;

    void GoToHomePage()
    {
        nav.NavigateTo("");
    }
    
    void GoToStickers()
    {
        nav.NavigateTo("stickers");
    }

    void GoToSearch()
    {
        nav.NavigateTo("search");
    }

    protected override void OnInitialized()
    {
        StateService.OnStateChanged += StateHasChanged;
    }

    public void Dispose()
    {
        StateService.OnStateChanged -= StateHasChanged;
    }
}
